<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Note</h1>
  <div class="col-6 offset-3">
    <form action="/notes" method="POST" class="validated-form form" novalidate>
      <div class="mb-3">
        <label class="form-label" for="note">Note</label>
        <input
          class="form-control"
          type="text"
          id="note"
          name="note[note]"
          required
        />
        <div class="valid-feedback">Good!</div>
      </div>

      <div class="mb-3">
        <button class="btn btn-success">Add Note</button>
      </div>
    </form>
    <a href="/notes">All Campgrounds</a>
  </div>
</div>
